@model IEnumerable<Cosmos.Models.Subscription>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Subscriptions";
}

<div class="row mb-3">
	<div class="col-12 d-flex justify-content-between align-items-center">
		<div>
		<h1>Subscriptions</h1>
		<p class="text-muted fst-italic fs-6">Free | Advanced | Ultimate</p>

		</div>
		<a asp-action="Create" class="btn btn-brand-primary brand-shadow"><i class="fa-solid fa-plus me-2"></i>Add</a>
	</div>
</div>

<div class="row">
	<div class="col-12">
		<table class="table table-hover table-striped rounded data-table">
			<thead class="bg-dark text-light rounded-top">
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
                    <th>
						@Html.DisplayNameFor(model => model.Price)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.CreatedAt)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
                        <td>
							@Html.DisplayFor(modelItem => item.Price)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CreatedAt)
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
							<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
							<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>