@model IEnumerable<Cosmos.Models.Publisher>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Game Publishers";
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1>Publishers</h1>
            <p class="text-muted fst-italic fs-6">Hint: Electronic Arts, Rockstar, etc.</p>

        </div>
        <a asp-action="Create" class="btn btn-brand-primary brand-shadow"><i class="fa-solid fa-plus me-2"></i>Add
            Publisher</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-hover table-striped rounded data-table shadow">
            <thead class="bg-dark text-light rounded-top">
                <tr>
                    <th>
						@Html.DisplayNameFor(model => model.Id)
					</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th class="brand-text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
							@Html.DisplayFor(modelItem => item.Id)
						</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                           <div class="d-flex justify-content-end">
								<a asp-action="Details" asp-route-id="@item.Id" class="icon-btn text-info"><i class="fa-solid fa-desktop fa-sm"></i></a>
								<a asp-action="Edit" asp-route-id="@item.Id" class="icon-btn text-dark"><i class="fa-solid fa-pencil fa-sm"></i></a>
								<a asp-action="Delete" asp-route-id="@item.Id" class="icon-btn text-danger"><i class="fa-solid fa-trash fa-sm"></i></a>
							</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
