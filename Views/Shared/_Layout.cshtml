<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Cosmos | @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Cosmos.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" id="secondary-navbar">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo.png" alt="Cosmos" class="image-fluid" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
					aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Support</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-magnifying-glass"></i></a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i></a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-regular fa-circle-user"></i></a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow" id="main-navbar">
			<div class="container">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
					aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between #main-navbar">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Brief">Brief</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Membership</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Download</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">How to Play</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Developers" asp-action="Index">Developers</a>
						</li>
					</ul>
					<a href="#" class="btn btn-brand-primary">Join now</a>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-fluid p-0">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer class="container-fluid p-0 mb-0 bg-brand-dark">
		<div class="container">
			<div class="row py-5">
				<div class="col-md-4">
					<h4>About</h4>
					<hr class="hr-brand-primary">
					<ul class="footer-nav">
						<li><a href="#">Membership</a></li>
						<li><a href="#">Games</a></li>
						<li><a href="#">Release Highlights</a></li>
						<li><a href="#">Terms of Use</a></li>
					</ul>
				</div>
				<div class="col-md-4">
					<h4>Resources</h4>
					<hr>
					<ul class="footer-nav">
						<li><a href="#">Forums</a></li>
						<li><a href="#">Products</a></li>
						<li><a href="#">Guides for PC/Mac</a></li>
						<li><a href="#">Guides for Consoles</a></li>
						<li><a href="#">Guides for Android/iOS</a></li>
					</ul>
				</div>
				<div class="col-md-4">
					<h4>Support</h4>
					<hr>
					<ul class="footer-nav">
						<li><a href="#">Download</a></li>
						<li><a href="#">FAQs</a></li>
						<li><a href="#">System Requirements</a></li>
						<li><a href="#">Technical Support</a></li>
						<li><a href="#">Service Status</a></li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
	<div class="container-fluid copyright border-top text-muted text-center bg-light text-dark">
		&copy; 2023 - Cosmos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script type="text/javascript" src="~/js/vanilla-tilt.js" asp-append-version="true"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://kit.fontawesome.com/50d7773464.js" crossorigin="anonymous"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
