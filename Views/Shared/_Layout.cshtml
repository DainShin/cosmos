<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Cosmos | @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Cosmos.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cosmos</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
					aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Brief">Brief</a>
						</li>
						@* <li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home"
						asp-action="Privacy">Privacy</a>
						</li> *@
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container-fluid">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer class="container-fluid mb-0 text-muted">
		<div class="container">
			<div class="row py-5">
				<div class="col-md-4">
					<h4>About</h4>
					<hr>
					<ul class="footer-nav">
						<li><a href="nav-link text-dark">Membership</a></li>
						<li><a href="nav-link text-dark">Games</a></li>
						<li><a href="nav-link text-dark">Release Highlights</a></li>
						<li><a href="nav-link text-dark">Terms of Use</a></li>
					</ul>
				</div>
				<div class="col-md-4">
					<h4>Resources</h4>
					<hr>
					<ul class="footer-nav">
						<li><a href="nav-link text-dark">Forums</a></li>
						<li><a href="nav-link text-dark">Products</a></li>
						<li><a href="nav-link text-dark">Guides for PC/Mac</a></li>
						<li><a href="nav-link text-dark">Guides for Consoles</a></li>
						<li><a href="nav-link text-dark">Guides for Android/iOS</a></li>
					</ul>
				</div>
				<div class="col-md-4">
					<h4>Support</h4>
					<hr>
					<ul class="footer-nav">
						<li><a href="nav-link text-dark">Download</a></li>
						<li><a href="nav-link text-dark">FAQs</a></li>
						<li><a href="nav-link text-dark">System Requirements</a></li>
						<li><a href="nav-link text-dark">Technical Support</a></li>
						<li><a href="nav-link text-dark">Service Status</a></li>
					</ul>
				</div>
			</div>
		</div>
	</footer>
	<div class="container-fluid copyright border-top text-muted text-center bg-dark text-white">
		&copy; 2023 - Cosmos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
