@model List<MainMenuItem>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow" id="main-navbar">
	<div class="container">
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
			aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between #main-navbar">
			<ul class="navbar-nav flex-grow-1">
				@foreach (var mainMenuItem in Model)
				{
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="" asp-controller="@mainMenuItem.Controller"
							asp-action="@mainMenuItem.Action">@mainMenuItem.Label
							@if (@mainMenuItem.IsNew)
							{
								<span class="badge rounded-pill bg-warning text-dark">NEW</span>
							}
						</a>
					</li>
				}

			</ul>
			<a href="#" class="btn btn-brand-primary">Join now</a>
		</div>
	</div>
</nav>