@model List<SecondaryMenuItem>

<head>
    <style>
        #main-navbar {
            background-color: var(--brand-tertiary);
        }
    </style>
</head>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow" id="main-navbar">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between #main-navbar">
            <ul class="navbar-nav flex-grow-1">
                @foreach (var secondaryMenuItem in Model)
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="@secondaryMenuItem.Controller"
                            asp-action="@secondaryMenuItem.Action">@secondaryMenuItem.Label</a>
                    </li>
                }

            </ul>
            <a href="#" class="btn btn-brand-primary">Join now</a>
        </div>
    </div>
</nav>