@model Cosmos.Models.Game
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Delete Game";
}

<div class="row mb-3">
	<div class="col-lg-8 col-md-12 d-block mx-auto d-flex justify-content-between align-items-center">
		<div>
			<h1>Delete</h1>
			<h5>Are you sure you want to delete this?</h5>
		</div>
		<a asp-action="Index" class="btn btn-light brand-shadow"><i class="fa-solid fa-chevron-left me-2"></i>Cancel</a>
	</div>
</div>
<div class="row">
	<div class="col-lg-8 col-md-12 d-block mx-auto">
		<div class="card border-0 shadow">
			<div class="card-body">
				<h4>@Model.Name</h4>
				<hr />
				<div class="row">
					<div class="col-lg-4 mb-3">
						<img src="~/@Model.ImagePath" alt="@Model.Name" class="img-fluid game-art shadow" />
					</div>
					<div class="col-lg-8">
						<p>@Html.DisplayFor(model => model.Description)</p>
						<dl class="row mt-3">
							<dt class="col-lg-3 col-md-6">
								Initial release date
							</dt>
							<dd class="col-lg-9 col-md-6">
								@Model.ReleaseDate.ToString("MMMM dd, yyyy a\\t hh:mm tt")
							</dd>
							<dt class="col-lg-3 col-md-6">
								@Html.DisplayNameFor(model => model.Genres)
							</dt>
							<dd class="col-lg-9 col-md-6">
								@foreach (var genre in @Model.Genres)
								{
									<span class="badge rounded-pill bg-dark text-light mb-1">@Html.DisplayFor(genreItem =>
									genre.Name)</span>
								}
							</dd>
							<dt class="col-lg-3 col-md-6">
								@Html.DisplayNameFor(model => model.Modes)
							</dt>
							<dd class="col-lg-9 col-md-6">
								@foreach (var mode in @Model.Modes)
								{
									<span class="badge rounded-pill bg-dark text-light mb-1">@Html.DisplayFor(modeItem =>
									mode.Name)</span>
								}
							</dd>
							<dt class="col-lg-3 col-md-6">
								@Html.DisplayNameFor(model => model.Subscriptions)
							</dt>
							@{
								// TODO: Additional stytling for subscription levels
							}
							<dd class="col-lg-9 col-md-6">
								@foreach (var subscription in @Model.Subscriptions)
								{
									<span
										class="badge rounded-pill bg-primary text-light mb-1">@Html.DisplayFor(subscriptionItem
									=>
									subscription.Name)</span>
								}
							</dd>
							<dt class="col-lg-3 col-md-6">
								@Html.DisplayNameFor(model => model.Developer)
							</dt>
							<dd class="col-lg-9 col-md-6">
								@if (Model.Developer != null)
								{
									@Model.Developer.Name;
								}
							</dd>
							<dt class="col-lg-3 col-md-6">
								@Html.DisplayNameFor(model => model.Publisher)
							</dt>
							<dd class="col-lg-9 col-md-6">
								@if (Model.Publisher != null)
								{
									@Model.Publisher.Name;
								}
							</dd>
						</dl>
					</div>
				</div>
			</div>
			<div class="card-footer d-flex justify-content-end align-items-center py-3">
				<form asp-action="Delete">
					<div class="form-group mb-0">
						<input type="hidden" asp-for="Id" />
						<input type="submit" value="Delete" class="btn btn-danger brand-shadow" />
					</div>
				</form>
			</div>
		</div>
	</div>

</div>
