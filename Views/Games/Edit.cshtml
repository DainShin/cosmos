@model Cosmos.Models.Game

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Edit Game";
}
<div class="row mb-3">
	<div class="col-12 d-block mx-auto d-flex justify-content-between align-items-center">
		<h1>Editing @Model.Name</h1>
		<a asp-action="Index" class="btn btn-light brand-shadow"><i class="fa-solid fa-chevron-left me-2"></i>Go
			back</a>
	</div>
</div>

<div class="row">
	<div class="col-12 d-block mx-auto">
		<form asp-action="Edit" method="post" enctype="multipart/form-data">
			<input type="hidden" asp-for="Id" />
			<input type="hidden" asp-for="Enabled" />
			<input type="hidden" asp-for="CreatedAt" />
			<div class="card border-0 shadow">
				<div class="card-body p-4">
					<div class="row">
						<div class="col-lg-4 col-md-12 mb-3">
							<img src="~/@Model.ImagePath" alt="@Model.Name" srcset=""
								class="img-fluid game-art d-block w-100 shadow">
						</div>
						<div class="col-lg-8 col-md-12">
							<div class="row">
								<div class="col-lg-6 col-md-12">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group mb-3">
										<label asp-for="Name" class="control-label mb-1"></label>
										<input asp-for="Name" class="form-control" />
										<span asp-validation-for="Name" class="text-danger"></span>
									</div>
									<div class="form-group mb-3">
										<label asp-for="Description" class="control-label mb-1"></label>
										<textarea rows="5" asp-for="Description" class="form-control"></textarea>
										<span asp-validation-for="Description" class="text-danger"></span>
									</div>
									<div class="form-group mb-3">
										<label asp-for="ImagePath" class="control-label mb-1">Game Art</label>
										<input type="hidden" asp-for="ImagePath" />
										<input type="file" name="gameArt" class="form-control" />
										<span asp-validation-for="ImagePath" class="text-danger"></span>
									</div>
									<div class="form-group mb-3">
										<label asp-for="ReleaseDate" class="control-label mb-1"></label>
										<input asp-for="ReleaseDate" class="form-control" />
										<span asp-validation-for="ReleaseDate" class="text-danger"></span>
									</div>
									<div class="form-group mb-3">
										<label asp-for="DeveloperId" class="control-label mb-1"></label>
										<select asp-for="DeveloperId" class="form-control"
											asp-items="ViewBag.DeveloperId"></select>
									</div>
									<div class="form-group mb-3">
										<label asp-for="PublisherId" class="control-label mb-1"></label>
										<select asp-for="PublisherId" class="form-control"
											asp-items="ViewBag.PublisherId"></select>
									</div>
								</div>
								<div class="col-lg-6 col-md-12">
									<div class="form-group mb-3">
										<label asp-for="Modes" class="control-label mb-1">Game Modes</label>
										<select name="selectedModes" asp-items="ViewBag.Modes" multiple="multiple"
											class="form-control"></select>
										<span asp-validation-for="Modes" class="text-danger"></span>
									</div>
									@* <div class="form-group mb-3">
									<label asp-for="Genres" class="control-label mb-1"></label>
									<select name="selectedGenres" asp-items="ViewBag.Genres" multiple="multiple"
									class="form-control"></select>
									<span asp-validation-for="Genres" class="text-danger"></span>
									</div> *@
									@* <div class="form-group mb-3">
									<label asp-for="Subscriptions"
									class="control-label mb-1 text-primary fw-bold">Subscription
									Level</label>
									<select name="selectedSubscriptions" asp-items="ViewBag.Subscriptions"
									multiple="multiple" class="form-control"></select>
									<span asp-validation-for="Subscriptions" class="text-danger"></span>
									</div> *@

								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer d-flex justify-content-end align-items-center py-3">
					<div class="form-group mb-0">
						<input type="submit" value="Update" class="btn btn-success brand-shadow" />
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

