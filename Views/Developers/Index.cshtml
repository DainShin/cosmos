@model IEnumerable<Cosmos.Models.Developer>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Game Developers";
}

<div class="row mb-3">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1>Developers</h1>
            <p class="text-muted fst-italic fs-6">Hint: Activision, Square Enix, etc.</p>

        </div>
        <a asp-action="Create" class="btn btn-brand-primary brand-shadow"><i class="fa-solid fa-plus me-2"></i>Add
            Developer</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-hover table-striped rounded data-table">
            <thead class="bg-dark text-light rounded-top">
                <tr>
                    <th>
						@Html.DisplayNameFor(model => model.Id)
					</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th class="brand-text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
							@Html.DisplayFor(modelItem => item.Id)
						</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
							@item.CreatedAt.ToString("dd/MM/yyyy")
						</td>
                        <td>
                            @await Component.InvokeAsync("ActionButtonSet", new { id = item.Id, controller = "Developers" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>